<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

<div class="span-3 prepend-4">

	<h3>Passwort vergessen?</h3>
	
</div>

<div class="span-10 append-7 last">
	
	<% if resource.errors.size > 0 %>
		<ul>
		<% resource.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
		</ul>
	<% end %>

	<p><%= f.label :email, "E-Mail" %><br />
	<%= f.text_field :email, :class => "text span-5", :autofocus => true %></p>

	<p><%= f.submit "Passwort zurÃ¼cksetzen" %></p>

	<p style="margin-top: 26px;"><%= render :partial => "devise/shared/links" %></p>

</div>

<% end %>