<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

<div class="span-3 prepend-4">
	
	<h3>Registrieren</h3>
	
</div>
	
<div class="span-10 append-7 last">
	
	<% if resource.errors.size > 0 %>
		<ul>
		<% resource.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
		</ul>
	<% end %>

	<p><%= f.label :name %><br />
	<%= f.text_field :name, :class => 'text span-5', :autofocus => true %></p>

	<p><%= f.label :email, "E-Mail" %><br />
	<%= f.text_field :email, :class => 'text span-5' %></p>

	<p><%= f.label :password, "Passwort" %><br />
	<%= f.password_field :password, :class => 'text span-5' %></p>

	<p><%= f.label :password_confirmation, "Passwort-BestÃ¤tigung" %><br />
	<%= f.password_field :password_confirmation, :class => 'text span-5' %></p>

	<p><%= f.submit "Jetzt registrieren!" %></p>
	
	<p style="margin-top: 26px;"><%= render :partial => "devise/shared/links" %></p>
	
</div>

<% end %>